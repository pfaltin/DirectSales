@model IEnumerable<DirectSales04.Models.Sale>

@{
    ViewData["Title"] = "ActiveSales";
}

<h1>ActiveSales</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remarks)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Client.Title)
            </td>
            <td>
                    @item.Date.ToShortDateString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remarks)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SalesId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SalesId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SalesId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
