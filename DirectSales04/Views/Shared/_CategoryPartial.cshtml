@using DirectSales04.Areas.Identity.Data

@inject ApplicationDbContext _dbContext

<div class="form-group">

    <label class="control-label">Select product categories</label>

    <select class="form-control" name="categoryIds[]" multiple>
        @foreach (var categoryItem in _dbContext.Category.ToList())
        {
            <!option value="@categoryItem.CategoryId"
                     @if (ViewBag.ProductCategories != null) @(ViewBag.ProductCategories.Contains(categoryItem.CategoryId) ? "selected" : "")
                     >
                @categoryItem.CategoryName
            </!option>
        }
    </select>

</div>